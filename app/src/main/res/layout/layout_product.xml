<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/button_shap3"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Please select the loan which you need"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fendata"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle_shape"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:text="1/5"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/productLogo"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/pfdroDCductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Freecash"
        android:textColor="#ff242431"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@mipmap/iconwang"
        android:drawablePadding="6dp"
        android:text="5.0"
        android:textColor="#ff242431"
        android:textSize="12sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#30000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_shape"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_back" />


        <TextView
            android:id="@+id/productAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="â‚¹ 20,000"
            android:textColor="#ff37926b"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/profile_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_shape"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_next" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Loan amount"
        android:textColor="#ff333333"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_shape2"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="Fee "
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/productRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0.1%"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/day"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/productDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 11"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:text=" days"
            android:textColor="#ff000000"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/next"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_shap"
        android:gravity="center"
        android:text="Apply"
        android:textColor="@color/white"
        android:textSize="19sp" />
</LinearLayout>